{
  "name": "@raminjafary/vidar",
  "description": "Generate high-performance heatmap",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raminjafary/vidar"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "<raminjafary1993@gmail.com>",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "yarn dev:front",
    "dev:server": "yarn build && ts-node -P playground/tsconfig.json playground/server/server.ts",
    "dev:front": "yarn build && npx live-server --open=playground/front",
    "lint": "eslint --ext .ts,.js,.json .",
    "lint:fix": "yarn lint --fix",
    "prepublish": "yarn build",
    "test": "jest",
    "test:report": "yarn test --coverageReporters=text-summary",
    "release": "standard-version $* && git push --follow-tags && npm publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.22",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "standard-version": "^9.2.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsc": "^2.0.0",
    "typescript": "^4.3.4"
  }
}
